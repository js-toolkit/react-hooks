{
  "name": "@jstoolkit/react-hooks",
  "version": "1.44.0",
  "description": "React hooks",
  "author": "VZH",
  "license": "MIT",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-toolkit/react-hooks"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "copy:configs": "copyfiles package.json .npmignore README.md LICENSE ./dist/",
    "minify": "node-utils-minify --replace ./dist",
    "build": "npm run clean && tsc --build ./tsconfig.json && npm run minify",
    "build-to-styled-components": "tsc --project ./tsconfig.json --outDir '../styled-components/node_modules/@jstoolkit/react-hooks/'",
    "build-to-tutoron": "tsc --project ./tsconfig.json --outDir '../../../tutoron/node_modules/@jstoolkit/react-hooks'",
    "build-to-player": "tsc --build ./tsconfig.json && npm run minify && copyfiles -e './dist/*(package.json|README.md|LICENSE)' -u 1 './dist/**/*' '../../../player/modules/react-hooks'",
    "patch-publish": "npm run build && npm version patch && npm run copy:configs && npm publish ./dist/ --access public && git push origin master --follow-tags",
    "minor-publish": "npm run build && npm version minor && npm run copy:configs && npm publish ./dist/ --access public && git push origin master --follow-tags"
  },
  "optionalDependencies": {
    "@js-toolkit/node-utils": "^1.1.4"
  },
  "devDependencies": {
    "@jstoolkit/configs": "^3.84.7",
    "@jstoolkit/utils": "^1.44.5",
    "@jstoolkit/web-utils": "^1.34.0",
    "@types/eslint": "^8.4.6",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "^18.7.13",
    "@types/react": "18.0.17",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eventemitter3": "^4.0.7",
    "lodash.debounce": "^4.0.8",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "recoil": "^0.7.5",
    "rimraf": "^3.0.2",
    "terser": "^5.15.0",
    "typescript": "^4.8.2",
    "yargs": "^17.5.1"
  },
  "peerDependencies": {
    "react": ">= 16.8"
  }
}
